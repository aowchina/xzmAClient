<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/company_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="姓名"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/company_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="10dp"
                    android:text="联系方式"
                    android:textColor="@color/black"
                    android:textSize="15sp" />
            </LinearLayout>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">
                
                <TextView
                    android:id="@+id/company_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="地址"
                    android:textColor="@color/black"
                    android:textSize="14sp" />
            </LinearLayout>
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginTop="15dp"
                android:background="@mipmap/qixiu_fenjie" />
            <TextView
                android:id="@+id/ordeDetails_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:text="订单编号："
                android:textColor="@color/black"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/ordeDetails_wl_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="物流名称："
                android:textColor="@color/black"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/ordeDetails_wl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="物流单号："
                android:textColor="@color/black"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/ordeDetails_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="下单时间："
                android:textColor="@color/black"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/pay_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="支付时间："
                android:textColor="@color/black"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/send_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="发货时间："
                android:textColor="@color/black"
                android:textSize="14sp" />
            <TextView
                android:id="@+id/orde_end_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="确认收货时间："
                android:textColor="@color/black"
                android:textSize="14sp" />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0.2dp"
                android:layout_marginTop="15dp"
                android:background="@mipmap/qixiu_fenjie" />
        </LinearLayout>

        <!--<ImageView-->
        <!--android:id="@+id/iv_makesure_to"-->
        <!--android:layout_width="20dp"-->
        <!--android:layout_height="20dp"-->
        <!--android:layout_gravity="center_vertical"-->
        <!--android:src="@mipmap/arrow"-->
        <!--android:visibility="invisible" />-->

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp"/>


</LinearLayout>
