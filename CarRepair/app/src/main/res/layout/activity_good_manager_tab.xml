<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:orientation="horizontal" >
        
        <LinearLayout
            android:id="@+id/activity_good_manager_tab_selling"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/tv_selling"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="出售中"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/activity_good_manager_tab_conversian_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_good_manager_tab_laid"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/tv_laid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已下架"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/activity_good_manager_tab_square_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_good_manager_tab_review"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/tv_review"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="审核中"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/activity_good_manager_tab_mine_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:visibility="gone"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/activity_good_manager_tab_review_nopass"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/tv_review_nopass"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="审核不通过"
                android:textColor="@color/black"
                android:textSize="14sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:visibility="gone"
                />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@mipmap/qixiu_fenjie"
        android:layout_marginBottom="0.9dp"
        android:layout_gravity="bottom"
        />
    <ImageView
        android:id="@+id/activity_good_manager_tab_line"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:background="@mipmap/main_tab_selected_line"
        android:layout_gravity="bottom"
        />
</FrameLayout>