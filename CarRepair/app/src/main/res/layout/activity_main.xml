<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:lee="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@color/color_white"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/fl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/ll_bottom"
        >
        <LinearLayout
            android:id="@+id/ll_continer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_common"
            android:orientation="vertical"
            />
        <RelativeLayout
            android:id="@+id/rl_publish"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#55000000"
            >
            <include
                android:id="@+id/layout_title"
                layout="@layout/layout_title"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:paddingTop="25dp"
                android:paddingBottom="30dp"
                android:orientation="horizontal"
                android:background="@color/white"
                >
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    >
                    <ImageView
                        android:id="@+id/iv_seller"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/qigou_chushou_bt"
                        />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:visibility="gone"


                    >
                    <ImageView
                        android:id="@+id/iv_buyer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:src="@mipmap/qiugou_qiugou_bt"
                        />
                </FrameLayout>
            </LinearLayout>
        </RelativeLayout>
    </FrameLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.3dp"
        android:layout_above="@+id/ll_bottom"
        android:background="@mipmap/qixiu_fenjie" />
    <LinearLayout
        android:id="@+id/ll_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:background="@color/color_white"
        android:paddingBottom="4dp"
        android:paddingTop="4dp">


        <LinearLayout
            android:id="@+id/ll_query"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_query_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/qixiu_chacha" />

            <com.minfo.carrepair.widget.GradientTextView
                android:id="@+id/tv_query"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="查看"
                android:textSize="11sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_shop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_shop_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/qixiu_shangcheng" />

            <com.minfo.carrepair.widget.GradientTextView
                android:id="@+id/tv_shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="商品管理"
                android:textSize="11sp" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <!--<TextView-->
            <!--android:id="@+id/tv_shop"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="4dp"-->
            <!--android:text="购物车"-->
            <!--android:textSize="11sp" />-->
        </LinearLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <LinearLayout
                android:id="@+id/ll_purchase"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">


                <ImageView
                    android:id="@+id/iv_purchase_bt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/qixiu_qiugou" />

                <com.minfo.carrepair.widget.GradientTextView
                    android:id="@+id/tv_purchase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="求购"
                    android:textSize="11sp" />
            </LinearLayout>
            <com.minfo.carrepair.widget.CircleViewRed
                android:id="@+id/tv_order_num"
                android:layout_width="15dp"
                android:gravity="center"
                android:layout_marginRight="3dp"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:visibility="gone"
                android:text="1"
                android:textColor="#fff"
                android:textSize="11sp" />
        </RelativeLayout>
        <!--<LinearLayout-->
            <!--android:id="@+id/ll_purchase"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="match_parent"-->
            <!--android:layout_weight="1"-->
            <!--android:gravity="center_horizontal"-->
            <!--android:orientation="vertical">-->


            <!--<ImageView-->
                <!--android:id="@+id/iv_purchase_bt"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:src="@mipmap/qixiu_qiugou" />-->

            <!--<com.minfo.carrepair.widget.GradientTextView-->
                <!--android:id="@+id/tv_purchase"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginTop="4dp"-->
                <!--android:text="求购"-->
                <!--android:textSize="11sp" />-->
        <!--</LinearLayout>-->

        <LinearLayout
            android:id="@+id/ll_person"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/iv_person_bt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/qixiu_wode" />

            <com.minfo.carrepair.widget.GradientTextView
                android:id="@+id/tv_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="我的"
                android:textSize="11sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_publish"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true">


        <ImageView
            android:id="@+id/iv_publish_bt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/qixiu_fabu" />

        <com.minfo.carrepair.widget.GradientTextView
            android:id="@+id/tv_publish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="发布"
            android:paddingBottom="4dp"
            android:textSize="11sp" />
    </LinearLayout>
</RelativeLayout>
