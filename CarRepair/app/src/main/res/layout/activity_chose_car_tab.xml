<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >
    <RelativeLayout
        android:id="@+id/titles"
        android:layout_width="match_parent"
        android:layout_height="60dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal" >

        <LinearLayout
            android:id="@+id/activity_chose_car_tab_all"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:clickable="true"
            android:gravity="center_vertical"
            android:visibility="visible"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/tv_all"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="全部"
                android:textColor="@color/red"
                android:visibility="gone"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:src="@mipmap/qixiu_jiantou_toleft" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_chose_car_tab_pp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/tv_pp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="品牌"
                android:textColor="@color/gray"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/activity_chose_car_tab_conversian_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_chose_car_tab_cx"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/tv_cx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车系"
                android:textColor="@color/gray"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/activity_chose_car_tab_square_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginTop="8dp"
                android:visibility="gone"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/activity_chose_car_tab_cxing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:gravity="center"
            >

            <TextView
                android:id="@+id/tv_cxing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="车型"
                android:textColor="@color/gray"
                android:textSize="14sp" />
            <ImageView
                android:id="@+id/activity_chose_car_tab_mine_dot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:visibility="gone"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/activity_chose_car_tab_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:clickable="true"
            android:gravity="right|center_vertical"
            android:visibility="invisible"
            >

            <TextView
                android:id="@+id/tv_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:text="确定"
                android:textColor="@color/gray"
                android:textSize="14sp" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:visibility="gone"
                />
        </LinearLayout>
    </LinearLayout>
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.2dp"
        android:background="@mipmap/qixiu_fenjie"
        android:layout_marginBottom="0.9dp"
        android:layout_gravity="bottom"
        />
    <ImageView
        android:id="@+id/activity_chose_car_tab_line"
        android:layout_width="65dp"
        android:layout_height="2dp"
        android:background="@mipmap/main_tab_selected_line"
        android:layout_gravity="bottom"
        />

</FrameLayout>