    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_launcher" />
    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_product"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="液力"
        android:textColor="@color/shop_text_name"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/tv_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/tv_number"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_marginBottom="5dp"
        android:text="123"
        android:textColor="@color/shop_text_price" />
    <TextView
        android:id="@+id/tv_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv_name"
        android:layout_marginBottom="10dp"
        android:layout_alignBottom="@+id/iv_product"
        android:text="5人付款"
        android:textColor="@color/shop_text_common" />
