<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/tv_add_address"
        android:orientation="vertical">

        <include
            android:id="@+id/shippingaddress_title"
            layout="@layout/layout_title"
            />

        <com.minfo.carrepairseller.widget.swipemenulistview.SwipeMenuListView
            android:id="@+id/smlv_addresslist"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@color/transparent"
            android:dividerHeight="2dp"/>

    </LinearLayout>
    <TextView
        android:id="@+id/tv_add_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@mipmap/qixiu_publish_ensure"
        android:layout_alignParentBottom="true"
        android:textColor="@color/white"
        android:gravity="center"
        android:text="添加收货地址"
        />
</RelativeLayout>
